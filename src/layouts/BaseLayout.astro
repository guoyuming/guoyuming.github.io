---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "郭雨明的博客" } = Astro.props;
---

<!doctype html>
<html lang="zh-Hans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/gif" href="/avatar.gif" />
    <title>{title} | Yuming</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Noto+Serif+SC:wght@400;600;700&display=swap" rel="stylesheet" />
    <style is:global>
      :root {
        /* ThomasMoes Bold Color System - Dark Theme */
        --brown: #2d2011;
        --dark-bg: #0d0c16;
        --lightgrey: #ebe5de;
        --cream: #fef4ec;
        --color-bg: #0d0c16;
        --color-bg-alt: #1a1825;
        --color-text: #ebe5de;
        --color-text-muted: #9a9a9a;
        --color-accent: #e4432e;
        --color-accent-hover: #f5c517;
        --color-border: rgba(235, 229, 222, 0.15);
        
        /* Typography */
        --font-display: 'Playfair Display', Georgia, serif;
        --font-heading: 'Instrument Sans', -apple-system, sans-serif;
        --font-body: 'Instrument Sans', -apple-system, sans-serif;
        --font-serif: 'Noto Serif SC', 'Playfair Display', Georgia, serif;
        --font-mono: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
        
        /* Layout */
        --max-width: 1440px;
        --content-width: 720px;
        --spacing: 60px;
        --spacing-sm: 40px;
        --nav-height: 80px;
        
        /* Border Radius */
        --radius-card: 20px;
        --radius-nav: 30px;
        --radius-pill: 100px;
        --radius-sm: 8px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-size: 16px;
        scroll-behavior: smooth;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      body {
        font-family: var(--font-body);
        background: var(--color-bg);
        color: var(--color-text);
        line-height: 1.6;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* ThomasMoes Link Styling - border-bottom underline */
      a {
        color: inherit;
        text-decoration: none;
        border-bottom: 1px solid currentColor;
        transition: all 0.2s ease;
      }

      a:hover {
        border-bottom-color: transparent;
        color: var(--color-accent);
      }

      /* Typography */
      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-display);
        font-weight: 400;
        line-height: 1.2;
        margin-bottom: 0.8em;
      }

      h1 {
        font-size: 2.5rem;
        line-height: 1.1;
      }

      h2 {
        font-size: 2rem;
        margin-top: 2.5rem;
        line-height: 1.4;
      }

      h3 {
        font-family: var(--font-heading);
        font-size: 1.5rem;
        font-weight: 700;
        margin-top: 2rem;
      }

      p {
        font-size: 1.125rem;
        line-height: 1.8;
        margin-bottom: 1.5em;
      }

      blockquote {
        border-left: 3px solid var(--color-accent);
        padding-left: 1.5rem;
        margin: 2rem 0;
        color: var(--color-text);
        opacity: 0.85;
        font-family: var(--font-display);
        font-style: italic;
        font-size: 1.25rem;
      }

      code {
        font-family: var(--font-mono);
        font-size: 0.85em;
        background: var(--color-bg-alt);
        padding: 0.2em 0.5em;
        border-radius: var(--radius-sm);
      }

      pre {
        background: var(--dark-bg);
        color: var(--lightgrey);
        padding: 1.5rem;
        border-radius: var(--radius-card);
        overflow-x: auto;
        margin: 2rem 0;
      }

      pre code {
        background: none;
        padding: 0;
        color: inherit;
      }

      ul, ol {
        margin-left: 1.5rem;
        margin-bottom: 1.5em;
      }

      li {
        margin-bottom: 0.5em;
        font-size: 1.125rem;
      }

      hr {
        border: none;
        height: 1px;
        background: rgba(235, 229, 222, 0.2);
        margin: 3rem 0;
      }

      img {
        max-width: 100%;
        height: auto;
        border-radius: var(--radius-sm);
      }

      /* Sticky Navigation */
      .site-header {
        position: sticky;
        top: 0;
        z-index: 1000;
        background: var(--color-bg);
        border-bottom: 1px solid var(--color-border);
      }

      .nav-container {
        max-width: var(--max-width);
        height: var(--nav-height);
        margin: 0 auto;
        padding: 0 var(--spacing);
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-top-left-radius: var(--radius-nav);
        border-top-right-radius: var(--radius-nav);
      }

      .site-logo {
        display: flex;
        align-items: center;
        gap: 12px;
        border-bottom: none;
        transition: transform 0.2s ease;
      }

      .site-logo:hover {
        transform: scale(1.05);
        border-bottom: none;
      }

      .site-logo-text {
        font-family: var(--font-display);
        font-size: 1.5rem;
        font-weight: 500;
        letter-spacing: 0.02em;
      }


      /* Navigation with dot separators */
      .site-nav {
        display: flex;
        align-items: center;
        gap: 0;
      }

      .site-nav a {
        font-family: var(--font-heading);
        font-size: 0.875rem;
        font-weight: 500;
        padding: 8px 16px;
        border-bottom: none;
        border-radius: var(--radius-pill);
        transition: all 0.2s ease;
      }

      .site-nav a:hover {
        background: rgba(235, 229, 222, 0.1);
        border-bottom: none;
        color: var(--color-accent);
      }

      /* Dot separator */
      .nav-dot {
        width: 4px;
        height: 4px;
        background: var(--color-accent);
        border-radius: 50%;
        opacity: 0.6;
      }

      /* Main Content */
      main {
        flex: 1;
        width: 100%;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: var(--spacing) var(--spacing);
      }

      main.content-narrow {
        max-width: var(--content-width);
        padding: var(--spacing-sm) var(--spacing);
      }

      /* Footer */
      .site-footer {
        text-align: center;
        padding: var(--spacing-sm) var(--spacing);
        border-top: 1px solid var(--color-border);
        color: var(--color-text-muted);
        font-size: 0.875rem;
      }

      .site-footer p {
        font-size: 0.875rem;
        margin-bottom: 0;
      }

      /* Post Card Grid */
      .post-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
        gap: 24px;
        list-style: none;
        margin: 0;
        padding: 0;
      }

      .post-card {
        background: #141218;
        border: 1px solid var(--color-border);
        border-radius: var(--radius-card);
        padding: 32px;
        min-height: 380px;
        display: flex;
        flex-direction: column;
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
      }

      .post-card:hover {
        transform: scale(1.015);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        border-color: var(--color-accent);
      }


      .post-card-content {
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      .post-card-title {
        font-family: var(--font-heading);
        font-size: 1.375rem;
        font-weight: 700;
        line-height: 1.3;
        margin-bottom: 12px;
        margin-top: 0;
      }

      .post-card-title a {
        border-bottom: none;
      }

      .post-card-title a:hover {
        border-bottom: none;
        opacity: 0.7;
      }

      .post-card-excerpt {
        font-size: 1rem;
        color: var(--color-text-muted);
        line-height: 1.6;
        flex: 1;
        margin-bottom: 1rem;
      }

      .post-card-meta {
        margin-top: auto;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 0.875rem;
        color: var(--color-text-muted);
      }

      /* Pill Tags */
      .tag {
        display: inline-block;
        border: 1px solid var(--color-border);
        border-radius: var(--radius-pill);
        padding: 6px 16px;
        font-family: var(--font-heading);
        font-size: 0.8125rem;
        font-weight: 500;
        background: var(--color-bg-alt);
        transition: all 0.2s ease;
      }

      .tag:hover {
        background: var(--color-accent);
        color: #fff;
        transform: scale(1.05);
        border-color: var(--color-accent);
      }

      .post-category {
        display: inline-block;
        border: 1px solid var(--color-border);
        border-radius: var(--radius-pill);
        padding: 4px 12px;
        font-family: var(--font-heading);
        font-size: 0.75rem;
        font-weight: 500;
        background: transparent;
      }

      /* Legacy Post List (for archives) */
      .post-list {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      .post-item {
        padding: 1.5rem 0;
        border-bottom: 1px solid rgba(235, 229, 222, 0.15);
      }

      .post-item:last-child {
        border-bottom: none;
      }

      .post-title {
        font-family: var(--font-heading);
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }

      .post-meta {
        font-size: 0.875rem;
        color: var(--color-text-muted);
        display: flex;
        align-items: center;
        gap: 12px;
      }

      /* Button Design */
      .button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        border-bottom: none;
        border-radius: var(--radius-pill);
        padding: 12px 24px;
        font-family: var(--font-heading);
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .button:hover {
        transform: scale(1.05);
        border-bottom: none;
      }

      .button-primary {
        background: var(--color-accent);
        color: #fff;
      }

      .button-primary:hover {
        background: var(--color-accent-hover);
        color: #0d0c16;
      }

      .button-secondary {
        background: rgba(235, 229, 222, 0.1);
        color: var(--color-text);
      }

      .button-secondary:hover {
        background: rgba(235, 229, 222, 0.2);
      }

      /* Article Styles */
      article header {
        padding: 0;
        background: none;
        border: none;
        text-align: left;
        margin-bottom: 2.5rem;
      }

      article h1 {
        font-family: var(--font-display);
        font-size: 2.5rem;
        font-weight: 500;
        margin-bottom: 1rem;
        line-height: 1.2;
      }

      article .post-meta {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(235, 229, 222, 0.15);
      }

      .post-nav {
        display: flex;
        justify-content: space-between;
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(235, 229, 222, 0.15);
        font-size: 0.9rem;
        gap: 2rem;
      }

      .post-nav a {
        max-width: 45%;
        font-family: var(--font-heading);
        font-weight: 500;
      }

      /* Archives */
      .archive-year {
        font-family: var(--font-display);
        font-size: 2rem;
        margin-top: 3rem;
        margin-bottom: 1.5rem;
        color: var(--color-accent);
      }

      /* Categories Grid */
      .category-list {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        list-style: none;
        margin: 0;
        padding: 0;
      }

      .category-item a {
        display: block;
        padding: 16px 24px;
        background: #141218;
        border: 1px solid var(--color-border);
        border-radius: var(--radius-card);
        transition: all 0.2s ease;
        border-bottom: 1px solid var(--color-border);
      }

      .category-item a:hover {
        transform: scale(1.03);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        border-color: var(--color-accent);
        border-bottom: 1px solid var(--color-accent);
      }

      .category-count {
        font-size: 0.875rem;
        color: var(--color-text-muted);
      }

      /* Line Dividers */
      .divider {
        height: 1px;
        background: rgba(235, 229, 222, 0.2);
        margin: 2rem 0;
      }

      /* Page Title */
      .page-title {
        font-family: var(--font-display);
        font-size: 2.5rem;
        font-weight: 400;
        margin-bottom: 0.5rem;
      }

      .page-subtitle {
        font-size: 1rem;
        color: var(--color-text-muted);
        margin-bottom: 2.5rem;
      }

      /* Responsive */
      @media (max-width: 768px) {
        :root {
          --spacing: 24px;
          --spacing-sm: 20px;
          --nav-height: 64px;
        }

        .nav-container {
          padding: 0 var(--spacing);
        }

        .site-logo-text {
          font-size: 1.25rem;
        }

        .site-nav a {
          padding: 6px 12px;
          font-size: 0.8125rem;
        }

        .nav-dot {
          display: none;
        }

        main {
          padding: var(--spacing-sm) var(--spacing);
        }

        .post-grid {
          grid-template-columns: 1fr;
        }

        .post-card {
          min-height: 300px;
          padding: 24px;
        }


        h1, .page-title {
          font-size: 2rem;
        }

        article h1 {
          font-size: 1.875rem;
        }

        .post-nav {
          flex-direction: column;
          gap: 1rem;
        }

        .post-nav a {
          max-width: 100%;
        }
      }

      @media (max-width: 480px) {
        .post-card-title {
          font-size: 1.125rem;
        }
      }
    </style>
  </head>
  <body>
    <header class="site-header">
      <div class="nav-container">
        <a href="/" class="site-logo">
          <span class="site-logo-text">Yuming</span>
        </a>
        <nav class="site-nav">
          <a href="/">首页</a>
          <span class="nav-dot"></span>
          <a href="/archives">归档</a>
          <span class="nav-dot"></span>
          <a href="/categories">分类</a>
        </nav>
      </div>
    </header>
    
    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <p>&copy; 2017-{new Date().getFullYear()}</p>
    </footer>
  </body>
</html>

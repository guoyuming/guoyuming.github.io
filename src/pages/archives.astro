---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const sortedPosts = posts.sort((a, b) => 
  a.data.title.localeCompare(b.data.title, 'zh-CN')
);
---

<BaseLayout title="归档">
  <div class="archive-container">
    <h1 class="page-title">归档</h1>
    <p class="page-subtitle">共 {posts.length} 篇文章</p>
    
    <ul class="post-list">
      {sortedPosts.map(post => (
        <li class="post-item">
          <div class="post-info">
            <h3 class="post-title">
              <a href={`/posts/${post.slug}`}>{post.data.title}</a>
            </h3>
          </div>
        </li>
      ))}
    </ul>
  </div>
</BaseLayout>

<style>
  .archive-container {
    max-width: 720px;
    margin: 0 auto;
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin-top: 2rem;
  }

  .post-item {
    padding: 1rem 0;
    border-bottom: 1px solid rgba(45, 32, 17, 0.1);
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-info {
    display: flex;
    align-items: baseline;
  }

  .post-title {
    font-family: var(--font-heading);
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
  }

  .post-title a {
    border-bottom: none;
  }

  .post-title a:hover {
    opacity: 0.7;
  }
</style>
